{
  "$schema": "https://json.schemastore.org/release-it.json",
  "git": {
    "commitMessage": "chore: release v${version} [skip ci]",
    "tagName": "v${version}",
    "requireCleanWorkingDir": true,
    "requireUpstream": false
  },
  "github": {
    "release": true
  },
  "npm": {
    "publish": true,
    "publishArgs": [ "--provenance" ]
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "angular",
      "infile": "CHANGELOG.md"
    }
  }
}